<div class="container-fluid">

  <!-- Laziness -->
  <div class="starter-template">

    <!-- Header -->
    <!-- <h1>Summer Hill</h1><br /> -->
<div><h1><span style="color:#ff0000;">S</span><span style="color:#ff4000;">u</span><span style="color:#ff7f00;">m</span><span style="color:#ffbf00;">m</span><span style="color:#ffff00;">e</span><span style="color:#80ff00;">r</span><span style="color:#00ff00;"> </span><span style="color:#00ff80;">H</span><span style="color:#00ffff;">i</span><span style="color:#0080ff;">l</span><span style="color:#0000ff;">l</span></h1></div>
    <!-- <img src="/img/shill.png"> -->
    <hr>

    <!-- Announce Current Safe Value -->
    <p>
      <b>Amount paid on Mortgage:</b> <h3>$<TMPL_VAR NAME="offsetAmount"></h3>
      <p class="text-muted"><br />
	<i>Current Month: <TMPL_VAR NAME="month">. <br />
	Amount Remaining: $<TMPL_VAR NAME="mortgageRemaining">. <br />
	Paid This Month: +$<TMPL_VAR NAME="payedThisMonth">. </i>
        <TMPL_UNLESS NAME="generateEmail">
          <br /><i>
          <TMPL_IF NAME="interestDue">
	  <font color=#B20000">Interest Has Not Yet Been Paid </font>
          <TMPL_ELSE>
	  <font color="#00B200">Interest Has Been Paid!</font>
          </TMPL_IF>
          </i><br />
        </TMPL_UNLESS>
      </p>
    <p>
    <hr>

    <TMPL_UNLESS NAME="generateEmail">

    <!-- Alert if we have not payed just yet -->
    <TMPL_IF NAME="paymentNeeded">
      <div class="alert alert-danger" role="alert">
        <b>Warning: Have not locked in any pay this month</b>
      </div>
      <hr>
    </TMPL_IF>


    <!-- Donate Button: -->
    <form class="form-inline" action="/index.pl" method="POST">
      <div class="form-group">
        <label for="inputPay">Pay Now:</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <input type="text" class="form-control" id="inputPay" name="inputPay" placeholder="Amount.." pattern="\d*">
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <br>

    <!-- Rolling History: -->
    <hr>
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
      <table class="table">
      <tr>
        <th>Month</th>
        <th>Amount</th>
      </tr>
      <TMPL_LOOP NAME="rollingHistory">
      <tr>
      <td>
        <TMPL_VAR NAME="paymonth">
      </td>
      <td>
        + $<TMPL_VAR NAME="paysum">
      </td>
      </tr>
      </TMPL_LOOP>
      </table>
    </div>
    </TMPL_UNLESS>

  <!-- /starter-template -->
  </div>

<!-- /container-fluid -->
</div>
