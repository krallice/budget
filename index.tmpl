<div class="container-fluid">

  <!-- Laziness -->
  <div class="starter-template">

    <!-- Header -->
    <!-- <h1>Summer Hill</h1><br /> -->
<div><h1><span style="color:#ff0000;">S</span><span style="color:#ff4000;">u</span><span style="color:#ff7f00;">m</span><span style="color:#ffbf00;">m</span><span style="color:#ffff00;">e</span><span style="color:#80ff00;">r</span><span style="color:#00ff00;"> </span><span style="color:#00ff80;">H</span><span style="color:#00ffff;">i</span><span style="color:#0080ff;">l</span><span style="color:#0000ff;">l</span></h1></div>
    <!-- <img src="/img/shill.png"> -->
    <hr>

    <!-- Announce Current Safe Value -->
    <p>
      <b>Current Safe Value:</b> <h3>$<TMPL_VAR NAME="offsetAmount"></h3>
      <p class="text-muted"><br /><i>Current Month: <TMPL_VAR NAME="month">. <br />Amount Remaining: $<TMPL_VAR NAME="mortgageRemaining">. </i></p>
    <p>
    <hr>

    <!-- Alert if we have not payed just yet -->
    <TMPL_IF NAME="paymentNeeded">
      <div class="alert alert-danger" role="alert">
        <b>Warning: Have not updated safe value this month!</b>
      </div>
      <hr>
    </TMPL_IF>


    <!-- Donate Button: -->
    <form class="form-inline" action="/index.pl" method="POST">
      <div class="form-group">
        <label for="inputPay">Pay Now:</label>
        <div class="input-group">
          <div class="input-group-addon">$</div>
          <input type="text" class="form-control" id="inputPay" name="inputPay" placeholder="Amount.." pattern="\d*">
        </div>
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <br>

  <!-- /starter-template -->
  </div>

<!-- /container-fluid -->
</div>
